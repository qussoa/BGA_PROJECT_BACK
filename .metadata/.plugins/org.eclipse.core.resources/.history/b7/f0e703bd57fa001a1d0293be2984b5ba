package com.biz.bow.sevice;

public class FinalFrameServiceImpl implements FrameService {

	private static final int FINAL_FRAME = 3;
	
	private static final int SECOND_SHOT = 2;
	private static final int FINAL_SHOT=1;

	private int turn;
	private int fstShot;
	private int sndShot;
	private int finalShot;
	
	private String state;

	// 초기화
	public FinalFrameServiceImpl(int frameNum) {
		turn = FINAL_FRAME;
		fstShot = 0;
		sndShot = 0;
	}

	// 턴 횟수
	@Override
	public boolean playerTurn() {
		return turn > 0; 
	}
	
	@Override
	public void palyBow(int pinCnt) {
		setScore(pinCnt);
		setTurn();
	}
	
	private void setScore(int pinCnt) {
		switch(turn) {
		// 두번째 투구
		case SECOND_SHOT : 
			sndShot = pinCnt;
			break;
		// 마지막 프레임의 마지막 투구
		case FINAL_SHOT :
			finalShot = pinCnt;
			break;
		// 첫투구
		default :
			fstShot = pinCnt;
			break;
		
		}
	}	
	
	private void setTurn() {
		turn --;
	}
}
