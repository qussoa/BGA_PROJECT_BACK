package com.biz.bow.sevice;

public class NmlFrameServiveImpl implements FrameService {

	private static final int NOMAL_FRAME = 2;
	private static final int TOTAL_PIN = 10;

	private int turn;
	private int fstShot;
	private int sndShot;

	public NmlFrameServiveImpl() {
		// 생성자 초기화
		fstShot = 0;
		sndShot = 0;
	}

	// 플레이어 차례
	@Override
	public boolean playTurn() {
		return turn > 0;
	}

	@Override
	public void deductTurn() {
		// TODO Auto-generated method stub

	}

	// 턴
	private void setTurn(int pinCnt) {
		// 핀 카운트가 10이 되면 투구를 없앰
		if (pinCnt == TOTAL_PIN) {
			turn -= 2;
		}
		// 그렇지 않으면 턴 한 회씩 소모
		turn--;
	}

}
